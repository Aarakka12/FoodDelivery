<div class="panel header-panel flow-text z-depth-3">
  <div id="title">All Users</div>
  </div>
<div class="full-height scroll-bar">
  <table class="table table-bordered">
    <thead>
      <tr>
         
          <th>Firstname</th>
          <th>Lastname</th>
          <th>Email</th>
          <th>Date joined</th>
          <th></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to "#{user.first_name}" %></td>
          <td><%= link_to "#{user.last_name}"%></td>
          <td><%= user.email %></td>
          <td><%= user.created_at.strftime("%Y - %e - %d") %></td>
          <td>
            <%= button_to :class => "clear-button", method: :delete, data: { :confirm=>'You sure?' } do %>
              <i class="material-icons">clear</i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>